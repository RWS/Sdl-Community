<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:InterpretBank.TermbaseViewer.UI.Converters">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/buttonresources.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="5" />
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="5" />
        <Setter Property="Height" Value="22" />
    </Style>
    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="5" />
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource Sdl.Button.PrimaryStyle}">
        <Setter Property="Margin" Value="5 15 5 5" />
    </Style>
    <Style TargetType="Image" >
        <Setter Property="Height" Value="25" />
    </Style>
    <Style TargetType="StackPanel" >
        <Setter Property="Margin" Value="5 0 0 0"/>
    </Style>
    <converters:ImageToBitmapImageConverter x:Key="ImageConverter" />
</ResourceDictionary>