<Window x:Class="Sdl.Community.InSource.Tellme.WarningWindow.SettingsActionWarning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:root="clr-namespace:Sdl.Community.InSource"
        mc:Ignorable="d"
        Title="TellMe Warning"
        ResizeMode="NoResize"
        Loaded="SettingsActionWarning_OnLoaded"
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        Name="Root"
        MinWidth="350"
        WindowStartupLocation="Manual"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/ButtonResources.xaml" />
                <ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/TextBlockResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border BorderThickness="1"
            BorderBrush="#d4d4d4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <StackPanel Orientation="Horizontal"
                        Margin="15 20">
                <Image Source="{Binding ImagePath, ElementName=Root}"
                       Height="40"
                       Width="40"
                       RenderOptions.BitmapScalingMode="HighQuality" />

                <TextBlock Text="{Binding MessageTitle, ElementName=Root}"
                           Style="{StaticResource Sdl.TextBlock.InformationTitleStyle}"
                           FontSize="16"
                           Margin="5 0 0 0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center" />
            </StackPanel>

            <StackPanel Grid.Row="1">
                <TextBlock Text="{Binding Text, ElementName=Root}"
                           Focusable="True"
                           Style="{StaticResource Sdl.TextBlock.InformationTextStyle}"
                           MaxWidth="9999"
                           TextWrapping="Wrap"
                           Margin="24 8 24 0" />
                <TextBlock Style="{StaticResource Sdl.TextBlock.InformationTextStyle}"
                           HorizontalAlignment="Left"
                           Focusable="True"
                           Margin="24 12 24 0"
                           KeyDown="OpenUrl_KeyPressed">
                    <Run Text="{x:Static root:PluginResources.SettingsAction_ExternalHelp_1}" />
                    <Run Text="{x:Static root:PluginResources.SettingsAction_ExternalHelp_2}"
                         Cursor="Hand"
                         MouseLeftButtonDown="OpenUrl_ButtonClicked">
                        <Run.Style>
                            <Style TargetType="Run">
                                <Setter Property="Foreground"
                                        Value="#0096D6" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Foreground"
                                                Value="#028ac4" />
                                        <Setter Property="TextDecorations"
                                                Value="Underline" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Run.Style>
                    </Run>
                    <Run Text="{x:Static root:PluginResources.SettingsAction_ExternalHelp_3}" />
                </TextBlock>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="CloseButton"
                        Content="Close"
                        Style="{StaticResource Sdl.Button.SecondaryStyle}"
                        Click="CloseWindow_Click"
                        HorizontalAlignment="Right"
                        Margin="5 30 5 5" />

                <Button Name="OkButton"
                        Content="OK"
                        Visibility="Collapsed"
                        Style="{StaticResource Sdl.Button.PrimaryStyle}"
                        Click="OkButton_OnClick"
                        HorizontalAlignment="Right"
                        Margin="5 30 5 5" /></StackPanel>
        </Grid>
    </Border>
</Window>