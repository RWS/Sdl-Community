<Window x:Class="Sdl.Community.GSVersionFetch.View.ProjectWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:generic="clr-namespace:Sdl.Community.GSVersionFetch.Themes.Generic"
        xmlns:controls="clr-namespace:Sdl.Community.GSVersionFetch.UiHelpers"
        xmlns:ui="clr-namespace:Sdl.Community.GSVersionFetch.View"
        xmlns:viewModel="clr-namespace:Sdl.Community.GSVersionFetch.ViewModel"
        WindowStartupLocation="CenterScreen"
		WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
	    mc:Ignorable="d"
	    Title ="{Binding WindowTitle}"
        d:DesignHeight="450" d:DesignWidth="800" Height="500" Width="950" d:DataContext="{d:DesignInstance viewModel:ProjectWizardViewModel}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../UiHelpers/Buttons.xaml" />
                <ResourceDictionary Source="../UiHelpers/WindowsBorder.xaml" />
                <ResourceDictionary Source="../UiHelpers/CustomProgressRing.xaml" />
                <ResourceDictionary Source="../UiHelpers/General.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVisConv" />

            <Style TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="FontSize" Value="11" />
                <Setter Property="Foreground" Value="{StaticResource WindowsControl.Control.Text}" />
            </Style>

            <Style TargetType="Button" x:Key="SdlWizardStyleButton" BasedOn="{StaticResource SdlSecondaryButtonStyle}">
                <Setter Property="MinWidth" Value="70" />
                <Setter Property="Height" Value="34" />
                <Setter Property="Margin" Value="5,9,5,11" />
            </Style>

            <Style TargetType="Button" x:Key="SdlWizardStyleNextButton" BasedOn="{StaticResource SdlWizardStyleButton}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=IsLastPage}" Value="True">
                        <Setter Property="IsEnabled" Value="False" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="Button" x:Key="SdlWizardStyleFinishButton" BasedOn="{StaticResource SdlPrimaryButtonStyle}">
                <Setter Property="MinWidth" Value="70"></Setter>
                <Setter Property="Height" Value="34"></Setter>
                <Setter Property="Margin" Value="5,9,5,11"></Setter>
                <Setter Property="IsEnabled" Value="False" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=IsLastPage}" Value="True">
                        <Setter Property="IsEnabled" Value="True" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
            <DataTemplate DataType="{x:Type viewModel:ProjectsViewModel}">
                <ui:ProjectsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:FilesViewModel}">
                <ui:FilesView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:FilesVersionsViewModel}">
                <ui:FilesVersionsView />
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>

    <Border Style="{StaticResource WindowControlBorderStyle}">
        <Grid Margin="1,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition  Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition  Height="Auto" />
            </Grid.RowDefinitions>

            <!-- WIZARD BORDER CONTROL -->
            <controls:WindowsControl Grid.Row="0" DockPanel.Dock="Top" />

            <!-- WIZARD STEP HEADER CONTROL -->
            <controls:WizardProgressHeader  Grid.Row="1" />

            <!-- CURRENT PAGE AREA -->
            <ContentControl Grid.Row="2"
                            Content="{Binding Path=CurrentPage}" />

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Margin="10 0 0 0">
                    <generic:CustomProgressRing x:Name="ProgressRing"
                                                Style="{StaticResource Sdl.CustomProgressRing.Normal}"
                                                Text="{Binding ProgressEvent.Message}"
                                                Visibility="{Binding ProgressEvent.ShowRing, Converter={StaticResource BoolToVisConv}}" />
                    <TextBlock Text="{Binding ProgressEvent.Message}"
                               Margin="5 10 0 0"
                               Foreground="#00A8EB">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ProgressEvent.ShowRing}" Value="False">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- NAVIGATION BUTTONS -->
                <Grid Grid.Column="2" Grid.IsSharedSizeScope="True" HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition SharedSizeGroup="Buttons" />
                        <ColumnDefinition SharedSizeGroup="Buttons" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition SharedSizeGroup="Buttons" />
                        <ColumnDefinition SharedSizeGroup="Buttons" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Grid.Row="0" Command="{Binding Path=MoveBackCommand}" Style="{StaticResource SdlWizardStyleButton}" Content="Back" />
                    <Button Grid.Column="1" Grid.Row="0" Command="{Binding Path=MoveNextCommand}" Style="{StaticResource SdlWizardStyleNextButton}" Content="Next" />
                    <Button Grid.Column="3" Grid.Row="0" Command="{Binding Path=FinishCommand}" Style="{StaticResource SdlWizardStyleFinishButton}" Content="Finish" />
                    <Button Grid.Column="4" Grid.Row="0" Command="{Binding Path=CancelCommand}" Style="{StaticResource SdlWizardStyleButton}" Content="Cancel" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>