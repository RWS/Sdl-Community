<UserControl x:Class="Sdl.Community.StarTransit.View.PackageDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModels="clr-namespace:Sdl.Community.StarTransit.ViewModel"
             xmlns:resx="clr-namespace:Sdl.Community.StarTransit"
             d:DataContext="{d:DesignInstance viewModels:PackageDetailsViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/textblockresources.xaml"/>
			</ResourceDictionary.MergedDictionaries>

			<Style x:Key="DescriptionLableStyle" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource Sdl.TextBlock.InformationTitleStyle}">
				<Setter Property="Margin" Value="0 5 0 5"/>
			</Style>
		</ResourceDictionary>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<TextBlock Style="{StaticResource DescriptionLableStyle}" 
		           Grid.Column="0" Grid.Row="0"
		           Text="{x:Static resx:PluginResources.PackageDetails_NameLbl}"/>
		<TextBlock Grid.Row="0" Grid.Column="1"/>
		<TextBlock Style="{StaticResource DescriptionLableStyle}" 
		           Grid.Column="0" Grid.Row="1"
		           Text="{x:Static resx:PluginResources.PackageDetails_DescriptionLbl}"/>
		<TextBlock Grid.Row="1" Grid.Column="1"/>
		<TextBlock Style="{StaticResource DescriptionLableStyle}" 
		           Grid.Column="0" Grid.Row="2"
		           Text="{x:Static resx:PluginResources.PackageDetails_Location}"/>

		<TextBlock Style="{StaticResource DescriptionLableStyle}" 
		           Grid.Column="0" Grid.Row="3"
		           Text="{x:Static resx:PluginResources.PackageDetails_Customer}"/>

		<TextBlock Style="{StaticResource DescriptionLableStyle}" 
		           Grid.Column="0" Grid.Row="4"
		           Text="{x:Static resx:PluginResources.PackageDetails_Template}"><Span Foreground="Red">*</Span></TextBlock>


	</Grid>
</UserControl>
