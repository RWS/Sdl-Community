<Window x:Class="ProjectWizardExample.Wizard.View.ProjectWizard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:resources="clr-namespace:ProjectWizardExample.Controls"
        xmlns:controls="clr-namespace:ProjectWizardExample.Controls"
        xmlns:viewModel="clr-namespace:ProjectWizardExample.Wizard.ViewModel"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
        mc:Ignorable="d"
        Title ="{Binding WindowTitle}"
        Height="500" Width="950" x:Name="ProjectWizard1" d:DataContext="{d:DesignInstance viewModel:ProjectWizardViewModel}" >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../../Controls\Buttons.xaml" />
				<ResourceDictionary Source="../../Controls\WindowsBorder.xaml" />
				<ResourceDictionary Source="../../Themes\General.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="{x:Type Window}">
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="FontSize" Value="11"/>
                <Setter Property="Foreground" Value="{StaticResource WindowsControl.Control.Text}"/>
            </Style>

            <Style TargetType="Button" x:Key="SdlWizardStyleButton" BasedOn="{StaticResource SdlSecondaryButtonStyle}">
                <Setter Property="MinWidth" Value="70"></Setter>
                <Setter Property="Height" Value="34"></Setter>
                <Setter Property="Margin" Value="5,9,5,11"></Setter>
            </Style>

            <Style TargetType="Button" x:Key="SdlWizardStyleNextButton" BasedOn="{StaticResource SdlWizardStyleButton}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=IsLastPage}" Value="True">
                        <Setter Property="IsEnabled" Value="False" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="Button" x:Key="SdlWizardStyleFinishButton" BasedOn="{StaticResource SdlPrimaryButtonStyle}">
                <Setter Property="MinWidth" Value="70"></Setter>
                <Setter Property="Height" Value="34"></Setter>
                <Setter Property="Margin" Value="5,9,5,11"></Setter>
                <Setter Property="IsEnabled" Value="False" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Path=IsLastPage}" Value="True">
                        <Setter Property="IsEnabled" Value="True" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Border Style="{StaticResource WindowControlBorderStyle}" >
        <Grid Margin="1,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="65" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <!-- WIZARD BORDER CONTROL -->
            <controls:WindowsControl  Grid.Column="0" Grid.Row="0" DockPanel.Dock="Top" />

            <!-- WIZARD STEP HEADER CONTROL -->
            <controls:WizardProgressHeader  Grid.Column="0" Grid.Row="1" />

            <!-- CURRENT PAGE AREA -->
            <Border Background="White" Grid.Column="0" Grid.Row="2">
                <HeaderedContentControl Content="{Binding Path=CurrentPage}"/>
            </Border>


            <Border Grid.Column="0" Grid.Row="3" Background="{StaticResource WindowsControl.Navigation.Backround}"  >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- NAVIGATION BUTTONS -->
                    <Grid Grid.Column="2" Grid.IsSharedSizeScope="True" HorizontalAlignment="Right" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition SharedSizeGroup="Buttons" />
                            <ColumnDefinition SharedSizeGroup="Buttons" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition SharedSizeGroup="Buttons" />
                            <ColumnDefinition SharedSizeGroup="Buttons" />
                            <ColumnDefinition Width="10" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Grid.Row="0" Command="{Binding Path=VisitPreviousCommand}" Style="{StaticResource SdlWizardStyleButton}" Content="Back" />
                        <Button Grid.Column="1" Grid.Row="0" Command="{Binding Path=VisitNextCommand}" Style="{StaticResource SdlWizardStyleNextButton}" Content="Next" />
                        <Button Grid.Column="3" Grid.Row="0" Command="{Binding Path=FinishCommand}" Style="{StaticResource SdlWizardStyleFinishButton}" Content="Finish"/>
                        <Button Grid.Column="4" Grid.Row="0" Command="{Binding Path=CancelCommand}" Style="{StaticResource SdlWizardStyleButton}" Content="Cancel" />
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
