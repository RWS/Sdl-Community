<Window x:Class="LanguageWeaverProvider.View.LanguageMappingProviderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:root="clr-namespace:LanguageWeaverProvider"
		xmlns:styles="clr-namespace:LanguageWeaverProvider.Style"
		xmlns:controls="clr-namespace:LanguageWeaverProvider.Controls"
		xmlns:viewmodel="clr-namespace:LanguageWeaverProvider.ViewModel"
		mc:Ignorable="d"
		d:DataContext="{d:DesignInstance viewmodel:LanguageMappingProviderViewModel}"
		Title="Language Mapping"
		WindowStartupLocation="CenterScreen"
		WindowStyle="None"
		MinWidth="750"
		Width="800"
		MinHeight="420"
		Height="600">
	
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/ButtonResources.xaml" />
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/DataGridResources.xaml" />
				<ResourceDictionary Source="pack://application:,,,/LanguageWeaverProvider;component/Style/WindowsBorder.xaml" />
				<ResourceDictionary Source="pack://application:,,,/LanguageWeaverProvider;component/Controls/WatermarkTextBoxResources.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<Style TargetType="Image">
				<Setter Property="RenderOptions.BitmapScalingMode"
						Value="HighQuality" />
			</Style>

		</ResourceDictionary>
	</Window.Resources>

	<Border Style="{StaticResource WindowControlBorderStyle}">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="*" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>

			<styles:WindowsControl Grid.Row="0" />

			<TextBox Grid.Row="1"
					 Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}"
					 Style="{StaticResource WatermarkTextBox}"
					 BorderBrush="#FFBFCDD4"
					 controls:TextBoxWatermarkHelper.WatermarkText="Search language"
					 controls:TextBoxWatermarkHelper.ButtonCommand="{Binding ClearCommand}"
					 controls:TextBoxWatermarkHelper.ButtonCommandParameter="Filter"
					 HorizontalAlignment="Right"
					 Width="232"
					 Margin="16 12 16 0" />

			<DataGrid ItemsSource="{Binding FilteredMappedLanguages}"
					  SelectedItem="{Binding SelectedMappedLanguage}"
					  Style="{StaticResource Sdl.DataGrid.GenericStyle}"
					  BorderThickness="1"
					  BorderBrush="#FFBFCDD4"
					  AutoGenerateColumns="False"
					  Grid.Row="2"
					  HorizontalAlignment="Stretch"
					  ScrollViewer.VerticalScrollBarVisibility="Auto"
					  ScrollViewer.HorizontalScrollBarVisibility="Auto"
					  CanUserSortColumns="True"
					  CanUserAddRows="False"
					  CanUserDeleteRows="False"
					  Margin="16 16 16 0">
				<DataGrid.Columns>
					<DataGridTextColumn Header="Language"
										Binding="{Binding Path=Name}"
										IsReadOnly="True"
										Width="2*" />
					<DataGridTextColumn Header="Region"
										Binding="{Binding Path=Region}"
										IsReadOnly="True"
										Width="2*" />
					<DataGridTextColumn Header="Trados code"
										Binding="{Binding Path=TradosCode}"
										IsReadOnly="True"
										Width="1*" />
					<DataGridTextColumn Header="Language code"
										Binding="{Binding Path=LanguageCode, UpdateSourceTrigger=PropertyChanged}"
										IsReadOnly="False"
										Width="1*" />
				</DataGrid.Columns>
			</DataGrid>

			<TextBlock Text="{Binding LanguagesCountMessage}"
					   Grid.Row="3"
					   VerticalAlignment="Top"
					   Margin="16 5" />

			<Separator Grid.Row="4"
					   VerticalAlignment="Top"
					   Background="#FFBFCDD4" />

			<Button Content="Reset to defaults"
					Command="{Binding ResetToDefaultCommand}"
					Style="{StaticResource Sdl.Button.SecondaryStyle}"
					Grid.Row="4"
					HorizontalAlignment="Left"
					Cursor="Hand"
					Width="120"
					Margin="16" />

			<StackPanel Grid.Row="4"
						Orientation="Horizontal"
						HorizontalAlignment="Right"
						Margin="16">

				<TextBlock Text="{Binding Loading}"
						Cursor="Hand"
						Width="120"
						/>

				<Button Content="OK"
						Command="{Binding ApplyChangesCommand}"
						Style="{StaticResource Sdl.Button.SecondaryStyle}"
						Cursor="Hand"
						Width="120"
						Margin="16 0" />

				<Button Content="Cancel"
						Command="{Binding CancelChangesCommand}"
						Style="{StaticResource Sdl.Button.SecondaryStyle}"
						Cursor="Hand"
						Width="120" />
			</StackPanel>
		</Grid>
	</Border>
</Window>