<UserControl x:Class="LanguageWeaverProvider.View.Cloud.CloudMainView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:LanguageWeaverProvider.View.Cloud"
			 xmlns:converters="clr-namespace:LanguageWeaverProvider.Converters"
			 xmlns:viewModel="clr-namespace:LanguageWeaverProvider.ViewModel.Cloud"
			 d:DataContext="{d:DesignInstance viewModel:CloudMainViewModel}"
			 mc:Ignorable="d">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="../../Style/GroupBox.xaml" />
				<ResourceDictionary Source="../../Style/WindowsBorder.xaml" />
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/ButtonResources.xaml" />
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/TextBlockResources.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<converters:InvertableBooleanToVisibilityConverter x:Key="InvertableBooleanToVisibilityConverter" />

			<Style TargetType="Image">
				<Setter Property="RenderOptions.BitmapScalingMode"
						Value="HighQuality" />
			</Style>

			<DataTemplate DataType="{x:Type viewModel:CloudCredentialsViewModel}">
				<local:CloudCredentialsView />
			</DataTemplate>

		</ResourceDictionary>
	</UserControl.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="4*" />
		</Grid.ColumnDefinitions>

		<StackPanel Grid.Row="0"
					Grid.ColumnSpan="2"
					Visibility="{Binding IsAuthenticationTypeSelected, Converter={StaticResource InvertableBooleanToVisibilityConverter}, ConverterParameter=Inverted}">
			<Button Content="User credentials"
					Style="{StaticResource Sdl.Button.PrimaryStyle}"
					Command="{Binding SelectAuthenticationTypeCommand}"
					CommandParameter="Credentials"
					Cursor="Hand"
					Width="172"
					Margin="0 8" />
			<Button Content="User secret"
					Style="{StaticResource Sdl.Button.PrimaryStyle}"
					Command="{Binding SelectAuthenticationTypeCommand}"
					CommandParameter="Secret"
					Cursor="Hand"
					Width="172"
					Margin="0 8" />
		</StackPanel>

		<Button Grid.Row="1"
				Grid.ColumnSpan="2"
				Content="Sign in"
				Style="{StaticResource Sdl.Button.PrimaryStyle}"
				CommandParameter="Secret"
				Visibility="{Binding IsAuthenticationTypeSelected, Converter={StaticResource InvertableBooleanToVisibilityConverter}}"
				Cursor="Hand"
				Width="172"
				Margin="0 8" />

		<ContentControl Grid.Row="0"
						Grid.ColumnSpan="2"
						Content="{Binding AuthenticationView}"
						Visibility="{Binding IsAuthenticationTypeSelected, Converter={StaticResource InvertableBooleanToVisibilityConverter}}"
						Focusable="False"
						Margin="0" />
	</Grid>
</UserControl>