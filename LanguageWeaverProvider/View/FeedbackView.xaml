<Window x:Class="LanguageWeaverProvider.View.FeedbackView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:local="clr-namespace:LanguageWeaverProvider.View"
		xmlns:Style="clr-namespace:LanguageWeaverProvider.Style"
		xmlns:controls="clr-namespace:LanguageWeaverProvider.Controls"
		xmlns:viewModel="clr-namespace:LanguageWeaverProvider.ViewModel"
		d:DataContext="{d:DesignInstance viewModel:FeedbackViewModel}"
		mc:Ignorable="d"
		d:DesignHeight="450"
		d:DesignWidth="800">

	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/TextBoxResources.xaml" />
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/TextBlockResources.xaml" />
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/ButtonResources.xaml" />
				<ResourceDictionary Source="pack://application:,,,/LanguageWeaverProvider;component/Controls/WatermarkTextBoxResources.xaml" />
				<ResourceDictionary Source="pack://application:,,,/LanguageWeaverProvider;component/Style/Buttons.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0"
				   Text="Give feedback!"
				   Style="{StaticResource Sdl.TextBlock.GenericTitleTextStyle}"
				   HorizontalAlignment="Center"
				   FontSize="20"
				   Margin="8 0 8 16" />

		<TextBlock Grid.Row="1"
				   Text="Let us know how we did!"
				   Style="{StaticResource Sdl.TextBlock.GenericTextStyle}"
				   HorizontalAlignment="Center"
				   Focusable="True"
				   Margin="16 0 16 0" />

		<StackPanel Grid.Row="2"
					Orientation="Horizontal"
					HorizontalAlignment="Center"
					Margin="16 8">
			<Button x:Name="star_1"
					Style="{StaticResource TransparentButtonStyle}"
					MouseEnter="Star_MouseEnter"
					MouseLeave="Star_MouseLeave"
					Click="Star_Clicked"
					Height="22"
					Margin="0"
					Padding="0">
				<Button.Content>
					<TextBlock Text="★"
							   FontSize="30"
							   Foreground="#d4d4d4"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center" />
				</Button.Content>
			</Button>
			<Button x:Name="star_2"
					Style="{StaticResource TransparentButtonStyle}"
					MouseEnter="Star_MouseEnter"
					MouseLeave="Star_MouseLeave"
					Click="Star_Clicked"
					Height="22"
					Margin="0"
					Padding="0">
				<Button.Content>
					<TextBlock Text="★"
							   FontSize="30"
							   Foreground="#d4d4d4"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center" />
				</Button.Content>
			</Button>
			<Button x:Name="star_3"
					Style="{StaticResource TransparentButtonStyle}"
					MouseEnter="Star_MouseEnter"
					MouseLeave="Star_MouseLeave"
					Click="Star_Clicked"
					Height="22"
					Margin="0"
					Padding="0">
				<Button.Content>
					<TextBlock Text="★"
							   FontSize="30"
							   Foreground="#d4d4d4"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center" />
				</Button.Content>
			</Button>
			<Button x:Name="star_4"
					Style="{StaticResource TransparentButtonStyle}"
					MouseEnter="Star_MouseEnter"
					MouseLeave="Star_MouseLeave"
					Click="Star_Clicked"
					Height="22"
					Margin="0"
					Padding="0">
				<Button.Content>
					<TextBlock Text="★"
							   FontSize="30"
							   Foreground="#d4d4d4"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center" />
				</Button.Content>
			</Button>
			<Button x:Name="star_5"
					Style="{StaticResource TransparentButtonStyle}"
					MouseEnter="Star_MouseEnter"
					MouseLeave="Star_MouseLeave"
					Click="Star_Clicked"
					Height="22"
					Margin="0"
					Padding="0">
				<Button.Content>
					<TextBlock Text="★"
							   FontSize="30"
							   Foreground="#d4d4d4"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center" />
				</Button.Content>
			</Button>
		</StackPanel>

		<TextBlock Grid.Row="3"
				   Text="{Binding UserEstimation}" 
				   Style="{StaticResource Sdl.TextBlock.GenericTitleTextStyle}"
				   HorizontalAlignment="Center"/>

		<Border Grid.Row="4"
				Grid.ColumnSpan="2"
				BorderBrush="#c0c0c0"
				BorderThickness="1"
				Margin="16">
			<ScrollViewer Grid.Row="0"
						  VerticalScrollBarVisibility="Auto">
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>
					

					<Border Grid.Row="0"
							BorderThickness="0 0 0 1"
							HorizontalAlignment="Center"
							BorderBrush="#d4d4d4"
							Margin="16 0">
						<TextBlock Text="Leave a message (optional)"
								   Focusable="True"
								   TextWrapping="Wrap"
								   Foreground="#c0c0c0"
								   FontSize="18"
								   FontWeight="DemiBold"
								   Margin="16 0" />
					</Border>

					<TextBox Grid.Row="1" Text="{Binding FeedbackMessage, UpdateSourceTrigger=PropertyChanged}"
							 Style="{StaticResource Sdl.TextBox.BorderlessReadOnlyStyle}"
							 IsReadOnly="False"
							 Padding="4 8" />
				</Grid>
			</ScrollViewer>
		</Border>

		<Button Grid.Row="5"
				Grid.ColumnSpan="2"
				Content="Send feedback"
				Style="{StaticResource Sdl.Button.PrimaryStyle}"
				Margin="8" />

	</Grid>
</Window>