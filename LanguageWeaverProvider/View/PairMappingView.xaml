<Window x:Class="LanguageWeaverProvider.View.PairMappingView"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:root="clr-namespace:LanguageWeaverProvider"
		xmlns:view="clr-namespace:LanguageWeaverProvider.View"
		xmlns:style="clr-namespace:LanguageWeaverProvider.Style"
		xmlns:local="clr-namespace:LanguageWeaverProvider.ViewModel"
		xmlns:edgeView="clr-namespace:LanguageWeaverProvider.View.Edge"
		xmlns:cloudView="clr-namespace:LanguageWeaverProvider.View.Cloud"
		xmlns:viewModel="clr-namespace:LanguageWeaverProvider.ViewModel"
		xmlns:edgeViewModel="clr-namespace:LanguageWeaverProvider.ViewModel.Edge"
		xmlns:cloudViewModel="clr-namespace:LanguageWeaverProvider.ViewModel.Cloud"
		xmlns:converters="clr-namespace:LanguageWeaverProvider.Converters"
		mc:Ignorable="d"
		d:DataContext="{d:DesignInstance local:PairMappingViewModel}"
		WindowStartupLocation="CenterScreen"
		Title="Language Weaver Provider"
		ResizeMode="CanResize"
		WindowStyle="None"
		MinHeight="600"
		MinWidth="1000"
		Height="600"
		Width="1000"
		d:DesignHeight="800"
		d:DesignWidth="1000">

	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/ButtonResources.xaml" />
				<ResourceDictionary Source="/Sdl.Desktop.Platform.Styles;component/TextBoxResources.xaml" />
				<ResourceDictionary Source="pack://application:,,,/LanguageWeaverProvider;component/Style/GroupBox.xaml" />
				<ResourceDictionary Source="pack://application:,,,/LanguageWeaverProvider;component/Style/WindowsBorder.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<Style TargetType="Image">
				<Setter Property="RenderOptions.BitmapScalingMode"
						Value="HighQuality" />
			</Style>

			<converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

			<DataTemplate DataType="{x:Type cloudViewModel:CloudMappingViewModel}">
				<cloudView:CloudMappingView />
			</DataTemplate>

			<DataTemplate DataType="{x:Type viewModel:SettingsViewModel}">
				<view:SettingsView />
			</DataTemplate>
		</ResourceDictionary>
	</Window.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="72" />
			<RowDefinition Height="*" />
			<RowDefinition Height="64" />
		</Grid.RowDefinitions>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>

		<style:WindowsControl Grid.Row="0"
							  Grid.ColumnSpan="2" />

		<ContentControl Content="{Binding PairMappingView}"
						Visibility="{Binding ShowSettingsView, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverted}"
						Focusable="False"
						Margin="0 8"
						Grid.Row="1"
						Grid.ColumnSpan="2"
						HorizontalAlignment="Stretch" />

		<ContentControl Content="{Binding SettingsView}"
						Visibility="{Binding ShowSettingsView, Converter={StaticResource BooleanToVisibilityConverter}}"
						Focusable="False"
						Margin="0 8"
						Grid.Row="1"
						Grid.ColumnSpan="2"
						HorizontalAlignment="Stretch" />

		<StackPanel Grid.Row="2"
					Grid.Column="0"
					Orientation="Horizontal"
					Margin="12">
			<Button Content="Open Language Mapping"
					Style="{StaticResource Sdl.Button.SecondaryStyle}"
					Command="{Binding OpenLanguageMappingProviderViewCommand}"
					FontSize="11"
					FontWeight="DemiBold"
					Height="26"
					Width="174"
					Margin="12 0 0 0" />
			<Button Content="Settings"
					Style="{StaticResource Sdl.Button.SecondaryStyle}"
					Command="{Binding OpenSettingsViewCommand}"
					Visibility="{Binding ShowSettingsView, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverted}"
					FontSize="11"
					FontWeight="DemiBold"
					Height="26"
					Width="120"
					Margin="12 0 0 0" />

			<Button Content="feedback"
					Command="{Binding OpenFeedbackCommand}" />
		</StackPanel>

		<StackPanel Grid.Row="2"
					Grid.Column="1"
					Orientation="Horizontal"
					Margin="12">
			<Button Content="Cancel"
					Style="{StaticResource Sdl.Button.SecondaryStyle}"
					Command="{Binding CloseCommand}"
					FontSize="11"
					FontWeight="DemiBold"
					Height="26"
					Width="120"/>

			<Button Content="Confirm"
					Style="{StaticResource Sdl.Button.PrimaryStyle}"
					Command="{Binding SaveCommand}"
					FontSize="11"
					FontWeight="DemiBold"
					Height="26"
					Width="120"
					Margin="12 0" />
		</StackPanel>

	</Grid>
</Window>