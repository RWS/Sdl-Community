    <PackageReference Include="System.Data.DataSetExtensions" Version="4.5.0" />
  </ItemGroup>
  <ItemGroup>
    <Page Remove="Styles\TextBlockProjectInfoToolTipStyle.xaml" />
  </ItemGroup>
